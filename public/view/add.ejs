<%- include("header")  -%>
<div class="container my-5">
    <% if (typeof msg !== 'undefined' && typeof msg.errorss !== 'undefined' ) {
        msg.errorss.map(item => { %>
    <div class="alert alert-danger" role="alert">
        <%= item.msg %>
    </div>
    <%  })}; %>
    <h1>Add Data</h1>
    <div class="row mt-4">
        <form action="/add_data" method="post" enctype="multipart/form-data">
            <div class="card px-4 py-3">
                <div class="mb-3">
                    <label for="name" class="form-label">Student Name</label>
                    <input type="text" name="name" id="name" class="form-control"
                        value="<%= (typeof msg.name !== 'undefined') ? msg.name : '' %>">
                </div>
                <div class="mb-3">
                    <label for="nim" class="form-label">NIM</label>
                    <input type="number" name="nim" id="nim" class="form-control"
                        value="<%= (typeof msg.nim !== 'undefined') ? msg.nim : '' %>">
                </div>
                <div class="mb-3">
                    <label for="study" class="form-label">Study Program</label>
                    <input type="text" name="study" id="study" class="form-control"
                        value="<%= (typeof msg.study !== 'undefined') ? msg.study : '' %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control"
                        value="<%= (typeof msg.email !== 'undefined') ? msg.email : '' %>">
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Profile</label>
                    <input class="form-control" type="file" name="profile">
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary mt-2">Submit Data</button>
                </div>
            </div>
        </form>
    </div>
</div>
</div>
<%- include("footer")  -%>